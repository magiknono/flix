<!DOCTYPE html>
<html>
  <head>
    <title>Flix rails demo app</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <%= link_to image_tag("logo"), root_path %>
        <ul>
          <li>
            <%= link_to("All Movies", movies_path) %>
          </li>
        </ul>
      </nav>
    </header>
    <div class="content">
    <%= yield %>
    </div>
    <footer>
  <p>
    Copyright &copy; 2018-<%= Time.now.year %>
    <%= link_to 'localhost','http://127.0.0.1:3000' %>
  </p>
</footer>
  </body>
</html>
